edition = {2014/08/13},
issn = {1474-547X},
journal = {Lancet},
keywords = {Adult Body Mass Index Cohort Studies Female Humans},
language = {eng},
number = {9945},
pages = {755--765},
title = {{Body-mass index and risk of 22 specific cancers: a population-based cohort study of 5{\textperiodcentered}24 million UK adults}},
url = {https://www.ncbi.nlm.nih.gov/pubmed/25129328},
volume = {384},
year = {2014}
}
