doi = {10.1136/bmj.l1042},
issn = {17561833},
journal = {BMJ (Online)},
pmid = {30957776},
title = {{Body mass index and all cause mortality in HUNT and UK Biobank studies: Linear and non-linear mendelian randomisation analyses}},
