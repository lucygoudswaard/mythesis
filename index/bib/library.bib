edition = {2009/03/13},
issn = {1592-8721},
journal = {Haematologica},
keywords = {Animals Blood Platelets Humans Models, Biological},
language = {eng},
number = {5},
pages = {700--711},
title = {{Platelet receptors and signaling in the dynamics of thrombus formation}},
url = {https://www.ncbi.nlm.nih.gov/pubmed/19286885},
volume = {94},
year = {2009}
}
