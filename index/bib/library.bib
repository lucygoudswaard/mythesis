journal = {J Am Coll Cardiol},
keywords = {Aged Aged, 80 and over Blood Platelets Cardiovascu},
language = {eng},
number = {20},
pages = {2122--2129},
title = {{Association of immature platelets with adverse cardiovascular outcomes}},
