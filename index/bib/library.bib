keywords = {1,2-Dihydroxybenzene-3,5-Disulfonic Acid Disodium},
language = {eng},
number = {17},
pages = {3917--3931},
title = {{Central command dysfunction in rats with heart failure is mediated by brain oxidative stress and normalized by exercise training}},
