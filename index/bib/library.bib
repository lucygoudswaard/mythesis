issn = {1474-547X},
journal = {Lancet},
keywords = {Adult Aged Antihypertensive Agents Blood Pressure},
language = {eng},
number = {9718},
pages = {895--905},
title = {{Prognostic significance of visit-to-visit variability, maximum systolic blood pressure, and episodic hypertension}},
