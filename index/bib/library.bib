keywords = {Adult Aged Female Humans Male Mean Platelet Volume},
language = {eng},
number = {4},
pages = {346--355},
title = {{The prognostic value of admission mean platelet volume to platelet count ratio in patients with ST-segment elevation myocardial infarction undergoing primary percutaneous coronary intervention}},
