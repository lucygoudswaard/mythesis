doi = {10.1042/CS20020359},
issn = {0143-5221},
journal = {Clin Sci (Lond)},
keywords = {Aged Anti-Inflammatory Agents, Non-Steroidal Aspir},
language = {eng},
number = {1},
pages = {45--50},
title = {{Decrease of serum levels of the anti-inflammatory cytokine interleukin-10 in patients with advanced chronic heart failure}},
url = {https://www.ncbi.nlm.nih.gov/pubmed/12639217},
volume = {105},
year = {2003}
}
