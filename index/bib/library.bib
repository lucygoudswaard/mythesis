journal = {Sci Rep},
keywords = {Alleles Alpha-Ketoglutarate-Dependent Dioxygenase},
language = {eng},
pages = {16645},
title = {{MR-PheWAS: hypothesis prioritization among potential causal effects of body mass index on many outcomes, using Mendelian randomization}},
