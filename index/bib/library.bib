edition = {2008/08/13},
issn = {1872-7484},
journal = {Auton Neurosci},
keywords = {Animals CD40 Ligand Chemokine CCL2 Cytokines Disea},
language = {eng},
number = {1-2},
pages = {40--44},
title = {{Gene expression profiles of major cytokines in the nucleus tractus solitarii of the spontaneously hypertensive rat}},
url = {https://www.ncbi.nlm.nih.gov/pubmed/18703386},
volume = {142},
year = {2008}
