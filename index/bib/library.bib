issn = {1470-2738},
journal = {J Epidemiol Community Health},
keywords = {Achievement Adolescent Adult Anthropometry Body Ma},
language = {eng},
number = {4},
pages = {358--364},
title = {{Trajectories of socioeconomic inequalities in health, behaviours and academic achievement across childhood and adolescence}},
