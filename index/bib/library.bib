author = {Goudswaard, Lucy J and Bell, Joshua A and Hughes, David A and Corbin, Laura J and Walter, Klaudia and {Davey Smith}, George and Soranzo, Nicole and Danesh, John and {Di Angelantonio}, Emanuele and Ouwehand, Willem H and Watkins, Nicholas A and Roberts, David J and Butterworth, Adam S and Hers, Ingeborg and Timpson, Nicholas J},
doi = {10.1101/2020.06.01.20119081},
